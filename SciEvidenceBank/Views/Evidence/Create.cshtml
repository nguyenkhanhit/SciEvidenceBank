@model SciEvidenceBank.ViewModels.EvidenceEditViewModel

@{
    ViewBag.Title = "Create Evidence";
}

<h2>Create Evidence</h2>

@using (Html.BeginForm("Create", "Evidence", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Evidence.Title)
        @Html.TextBoxFor(m => m.Evidence.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Evidence.Title, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Evidence.Authors)
        @Html.TextBoxFor(m => m.Evidence.Authors, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Evidence.Authors, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Evidence.Source)
        @Html.TextBoxFor(m => m.Evidence.Source, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Evidence.Source, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Evidence.Year)
        @Html.TextBoxFor(m => m.Evidence.Year, new { @class = "form-control", type = "number" })
        @Html.ValidationMessageFor(m => m.Evidence.Year, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Evidence.AbstractText)
        @Html.TextAreaFor(m => m.Evidence.AbstractText, 6, 80, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Evidence.AbstractText, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("File (path or URL)")
        @Html.TextBoxFor(m => m.Evidence.FilePath, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Evidence.FilePath, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>
            @Html.CheckBoxFor(m => m.Evidence.IsPublished) Published
        </label>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Evidence.Status)
        @Html.TextBoxFor(m => m.Evidence.Status, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Evidence.ApprovedByName)
        @Html.TextBoxFor(m => m.Evidence.ApprovedByName, new { @class = "form-control" })
    </div>

    <hr />

    @* Research field selector partial - renders checkboxes named "selectedFieldIds" *@
    @Html.Partial("_ResearchFieldSelector", Model.AllFields)

    <div class="form-group" style="margin-top:12px;">
        <input type="submit" value="Create" class="btn btn-success" />
        @Html.ActionLink("Cancel", "Index", "Evidence", null, new { @class = "btn btn-default", style = "margin-left:8px;" })
    </div>
}