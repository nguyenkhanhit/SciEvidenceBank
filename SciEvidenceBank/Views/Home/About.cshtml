        }

        .badge-style {
            background: #e6f0ff;
            color: #0b2a66;
            font-weight: 600;
            border-radius: 0.5rem;
            padding: 6px 10px;
        }

        .accordion-button:focus {
            box-shadow: none;
        }
    </style>    
}